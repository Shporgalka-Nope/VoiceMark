<Window x:Class="Voice_Control.cfgCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Voice_Control"
        mc:Ignorable="d"
        Title="cfgCreationWindow" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" 
                        Orientation="Horizontal" Height="30">
                <Button Content="Save"/>
                <Button Content="Add new"/>
                <Button Content="Remove" IsEnabled="False"/>
            </StackPanel>
            <ComboBox DockPanel.Dock="Bottom" Height="20"
                      Name="cb_listOfJsons">
                
            </ComboBox>
            
            <ListView DockPanel.Dock="Top">
                
            </ListView>
        </DockPanel>
    </Grid>
</Window>
